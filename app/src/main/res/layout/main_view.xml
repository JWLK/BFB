<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainView"
    android:background="@color/colorWhite">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/top_shadow"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/topMenu"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/ic_bfb_logo_white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_bold"
                android:text="캡스톤 디자인"
                android:textAlignment="textStart"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvBluetoothStatus"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="연결상태"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@+id/tvPrintData"
            app:layout_constraintTop_toBottomOf="@+id/tvPrintData" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnBluetoothConnect"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:text="기기 연결하기"
                android:textColor="@color/colorWhite"
                android:background="@color/colorMainRed"/>

            <Button
                android:id="@+id/btnBluetoothDisconnect"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:text="기기연결 해제"
                android:textColor="@color/colorWhite"
                android:background="@color/colorGray54" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvReceiveData"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Data"
            android:textAlignment="center"
            android:layout_marginVertical="20dp"/>

        <Button
            android:visibility="gone"
            android:id="@+id/btnStartCOP"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:text="측정시작"
            android:textColor="@color/colorWhite"
            android:background="@color/colorMainBlue" />

        <Button
            android:visibility="gone"
            android:id="@+id/btnStopCOP"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:text="측정마침"
            android:textColor="@color/colorWhite"
            android:background="@color/colorGray9E" />

    </LinearLayout>

</ScrollView>